<div class='container'>
	<h1><%= @post.title %></h1>
	<p><%= @post.author %></p>
	<p>Created at: <%= @post.created_at %></p>
	<p>Updated at: <%= @post.updated_at %></p>
	<section>
		<%= @post.content %>
	</section>
	<p>Tags: <%= @post.tags.map { |tag| tag.phrase }.join(', ') %></p>
	<form method='post' action='/editpost'>
		<input type='hidden' name='post_id' value="<%= @post.id %>">
		<input type='submit' value='Edit this post'>
	</form>
</div>